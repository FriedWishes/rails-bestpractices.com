- set_meta_tags :title => 'Login', :noindex => true

%h2 Login

= semantic_form_for @user_session, :url => user_session_path do |form|
  = oauth_login_hidden_input
  = form.inputs do
    = form.input :login, :label => "Username"
    = form.input :password
    = form.input :remember_me, :as => :boolean
  = form.buttons do
    = form.submit "Login"

.register-hint
  %p
    Not a Member? You can get other benefits by
    = link_to 'becoming a rails-bestpractices.com Member', new_user_path
  %ul
    %li Share your rails best practices to others
    %li Vote rails best practices you like
    %li Comment rails best practices easier
