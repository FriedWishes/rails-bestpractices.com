= semantic_form_for user do |form|
  - if return_to
    = hidden_field_tag :return_to, return_to
  = form.semantic_errors :base
  = form.inputs do
    = form.input :login, :label => 'Username'
    = form.input :email
    = form.input :password
    = form.input :password_confirmation
  = form.buttons do
    = form.submit "Register"
