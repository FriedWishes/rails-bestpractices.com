- title @user.login

%h2= @user.login

.user
  - if @user == current_user
    .command
      = link_to 'Edit', edit_user_path(@user)
  .avatar= image_tag @user.gravatar_url(:size => 64, :default => 'mm'), :class => 'user-avatar', :alt => @user.login
  .info
    %p
      %span Username
      = @user.login
    %p
      %span Webstie
      = @user.url

.statistics
  .header
    %ul.navs
      = nav_class('posts') do
        = link_to "#{@user.posts_count} Rails Best Practices", user_path(current_user, :nav => 'posts')
      = nav_class('questions') do
        = link_to "#{@user.questions_count} Requests", user_path(current_user, :nav => 'questions')
      = nav_class('answers') do
        = link_to "#{@user.answers_count} Answers", user_path(current_user, :nav => 'answers')
      = nav_class('comments') do
        = link_to "#{@user.comments_count} Comments", user_path(current_user, :nav => 'comments')
      = nav_class('votes') do
        = link_to "#{@user.votes_count} Votes", user_path(current_user, :nav => 'votes')
  - case params[:nav]
  - when 'posts'
    = render 'posts/posts', :posts => @children.includes(:user, :tags), :description => false
  - when 'questions'
    = render 'questions/questions', :questions => @children.includes(:user, :tags)
  - when 'answers'
    = render 'users/answers', :answers => @children.includes(:question => [:user, :tags])
  - when 'comments'
    = render 'users/comments', :comments => @user.comments.includes(:commentable => :user)
  - when 'votes'
    = render 'users/votes', :votes => @user.votes.includes(:voteable => :user)
