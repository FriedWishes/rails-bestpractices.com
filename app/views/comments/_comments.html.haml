.comments
  %a{:name => 'comments'}
  - unless parent.comments.size == 0
    %h3 Comments
    - parent.comments.each do |comment|
      - unless comment.new_record?
        .comment
          %p.info
            - if comment.user
              = image_tag comment.user.gravatar_url(:size => 32), :class => 'user-avatar'
            Posted by 
            = comment_user_link(comment)
            on 
            = comment.created_at.strftime("%B %d, %Y %H:%M")
          .content
            .point-to-icon
            %p= comment.body
