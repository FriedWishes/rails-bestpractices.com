- set_meta_tags :title => 'implementation of rails best practices list'

%h2 Implementation of Rails Best Practices
.implementations
  - @implementations.each do |implementation|
    .implementation
      .title= link_to "implementation of #{implementation.post.title}", post_implementation_path(implementation.post)
      .author
        by
        = image_tag implementation.user.gravatar_url(:size => 32), :class => 'user-avatar', :alt => implementation.user.login
        = link_to implementation.user.login, user_path(implementation.user)

= will_paginate @implementations, :previous_label => "<< Previous", :next_label => "Next >>"
